                                    android:layout_marginTop="0dp"
                                    android:text="@string/placeholder"
                                    android:textColor="@color/AppGray"
                                    android:textSize="15sp" />

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingVertical="10dp">

                                <ImageView
                                    android:id="@+id/detailsWorkoutLocationImageView"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:backgroundTint="@android:color/transparent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_location"
                                    app:tint="@color/AppGray" />

                                <TextView
                                    android:id="@+id/detailsWorkoutLocationTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_toEndOf="@+id/detailsWorkoutLocationImageView"
                                    android:text="@string/location"
                                    android:textColor="@color/AppGray"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/detailsWorkoutLocationDataTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/detailsWorkoutLocationTextView"
