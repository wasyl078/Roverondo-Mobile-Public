                                <TextView
                                    android:id="@+id/detailsWorkoutAuthorTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:layout_toEndOf="@+id/detailsWorkoutAuthorImageView"
