                                    android:textColor="@color/AppGray"
                                    android:textSize="11sp" />

                                <TextView
                                    android:id="@+id/detailsWorkoutTotalDurationDataTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
