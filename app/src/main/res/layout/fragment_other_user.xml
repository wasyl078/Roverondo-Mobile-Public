<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_stripes_pink"
    android:orientation="vertical"
    tools:context=".fragments.OtherUserFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rowUserBackgroundCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/otherUserBioBlurView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_glass_capsule_border"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/otherUserImageView"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_cloud_download"
                            android:tint="@color/AppGray" />

                        <TextView
                            android:id="@+id/otherUserNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/otherUserImageView"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/otherUserBioTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserNameTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/otherUserImageView"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/AppLightGray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/otherUserFollowRelativeLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/gradient_grey_capsule"
                            android:padding="5dp"
                            android:paddingEnd="10dp">

                            <ImageView
                                android:id="@+id/otherUserFollowImageView"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@android:color/transparent"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_cloud_download"
                                app:tint="@color/White" />

                            <TextView
                                android:id="@+id/otherUserFollowTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0dp"
                                android:layout_toEndOf="@+id/otherUserFollowImageView"
                                android:text="@string/follow_question_mark"
                                android:textColor="@color/White"
                                android:textSize="20sp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/AppLightGray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/otherUserJoinedAtTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/joined_at"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserGenderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserJoinedAtTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/gender"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserBirthdateTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserGenderTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/birthdate"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserCityTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserBirthdateTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/city"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserJoinedAtDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserGenderDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserJoinedAtDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserBirthdateDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserGenderDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserCityDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserBirthdateDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="10dp"
                        android:background="@color/AppLightGray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/otherUserTotalDistanceTraveledTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_distance_traveled"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTimeInMotionTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserTotalDistanceTraveledTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/time_in_motion"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserFollowersTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserTimeInMotionTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/followers"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserFollowingTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserFollowersTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/following"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTotalReceivedReactionsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserFollowingTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/total_received_reactions"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTotalGivenReactionsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserTotalReceivedReactionsTextView"
                            android:layout_marginTop="2dp"
                            android:text="@string/total_given_reactions"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTotalDistanceTraveledDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTimeInMotionDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserTotalDistanceTraveledDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserFollowersDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserTimeInMotionDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserFollowingDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserFollowersDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTotalReceivedReactionsDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserFollowingDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/otherUserTotalGivenReactionsDataTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/otherUserTotalReceivedReactionsDataTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="2dp"
                            android:text="@string/placeholder"
                            android:textColor="@color/AppGray"
                            android:textSize="13sp" />

                    </RelativeLayout>

                </LinearLayout>

            </eightbitlab.com.blurview.BlurView>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/otherUserActivitiesBackgroundCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/otherUserActivitiesBlurView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_glass_capsule_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/otherUserActivitiesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activities"
                        android:textColor="@color/AppGray"
                        android:textSize="25sp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/otherUserActivitiesBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </LinearLayout>

            </eightbitlab.com.blurview.BlurView>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/otherUserDistancesBackgroundCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/otherUserDistancesBlurView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_glass_capsule_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/otherUserDistancesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distances"
                        android:textColor="@color/AppGray"
                        android:textSize="25sp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/otherUserDistancesBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </LinearLayout>

            </eightbitlab.com.blurview.BlurView>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/otherUserAverageSpeedsBackgroundCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/otherUserAverageSpeedsBlurView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_glass_capsule_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/otherUserAverageSpeedsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average_speeds"
                        android:textColor="@color/AppGray"
                        android:textSize="25sp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/otherUserAverageSpeedsBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </LinearLayout>

            </eightbitlab.com.blurview.BlurView>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/otherUserElevationsBackgroundCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="12dp"
            card_view:cardUseCompatPadding="true">

            <eightbitlab.com.blurview.BlurView
                android:id="@+id/otherUserElevationsBlurView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_glass_capsule_border"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/otherUserElevationsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elevations"
                        android:textColor="@color/AppGray"
                        android:textSize="25sp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/otherUserElevationsBarChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />
                </LinearLayout>

            </eightbitlab.com.blurview.BlurView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>